.ui-v-button
  position relative
  z-index 0
  width max-content

  > .button-background
    position: absolute
    top 0
    left 0
    width 100%
    height 100%
    z-index -1
    transition trans-background

  > .button-inner
    z-index 1
    padding s-2

  a:hover
    text-decoration none

.ui-v-button:hover
  cursor pointer

  .button-background
    background-color rgba(255, 255, 255, .2)

.ui-v-button + .ui-v-button
  margin-top s1
